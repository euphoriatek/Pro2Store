<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5" client="site" method="upgrade">
    <name>Pro2Store - Customer Orders</name>
    <author>Ray Lawlor - Pro2Store</author>
    <creationDate>August 2020</creationDate>
    <copyright>Copyright (C) 2020 Ray Lawlor - Pro2Store. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>info@pro2.store</authorEmail>
    <authorUrl>https://pro2.store</authorUrl>
    <version>2.0.0</version>
    <description>Pro2Store - Customer Orders - by Ray Lawlor - Pro2Store</description>
    <files>
        <filename module="mod_protostorecustomerorders">mod_protostorecustomerorders.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic" label="Basic">
                <field name="date_format" type="list" default="DATE_FORMAT_LC6" required="true" label="Select Date Format" description="">
                    <option value="">Please Select</option>
                    <option value="DATE_FORMAT_LC">l, d F Y</option>
                    <option value="DATE_FORMAT_LC2">l, d F Y H:i</option>
                    <option value="DATE_FORMAT_LC3">d F Y</option>
                    <option value="DATE_FORMAT_LC4">Y-m-d</option>
                    <option value="DATE_FORMAT_LC5">Y-m-d H:i</option>
                    <option value="DATE_FORMAT_LC6">Y-m-d H:i:s</option>
                    <option value="DATE_FORMAT_JS1">y-m-d</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>







