<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details"  addfieldpath="/administrator/components/com_protostore/models/fields">

        <field name="title" type="title" default="title" label="Title" description="" size="10"
               class="uk-input uk-form-width-medium uk-form-large"/>

        <field name="base_price" type="text" default="0" label="Base Price" description="" size="10"
               class="uk-input uk-form-width-medium uk-form-large" filter="float"/>

        <field name="sku" type="text" default="0" label="SKU" description="" size="10"
               class="uk-input uk-form-width-medium uk-form-large" filter="int" />

        <field name="manage_stock" type="pinputswitch" default="0" label="Manage Stock" description=""
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="stock" type="title" default="0" label="Stock" description="" size="10"
               class="uk-input uk-form-width-medium uk-form-large"  showon="manage_stock:1"/>

        <field name="short_description" type="editor" label="Short Description" description="" width="" height="100px"
               filter="safehtml"/>

        <field name="long_description" type="editor" label="Long Description" description="" width="" height="100px"
               filter="safehtml"/>

        <field name="teaserimage" type="media" directory="" preview="true" class="uk-input uk-form-width-small non-uk-input"  />

        <field name="fullimage" type="media" directory="" preview="true" class="uk-input uk-form-width-small non-uk-input"  />

        <field name="shipping_mode" type="list" default="" required="true" label="Shipping Mode" description="">
            <option value="">Please Select</option>
            <option value="flat">Flat</option>
            <option value="weight">By Weight</option>
        </field>

        <field name="state" type="pinputswitch" default="0" label="Published" description=""
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="featured" type="pinputswitch" default="0" label="Featured" description=""
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="access" type="accesslevel"
               label="JFIELD_ACCESS_LABEL"
               description="JFIELD_ACCESS_DESC"
               class="span12 small"/>

        <field name="category" type="CategoryEdit" extension="com_content" label="Select a category" description="" class="uk-select" required="true"/>

        <field name="tags" type="tag" label="JTAG" description="JTAG_DESC" mode="ajax" class="inputbox span12 small" multiple="true"/>

        <field name="publish_up_date" type="calendar" default="now" label="Select a date" description=""
               class="input-medium uk-input non-uk-input" required="true" filter="user_utc" format="%Y-%m-%d %H:%M:%S"
               singleheader="true" showtime="true" timeformat="12" todaybutton="true" weeknumbers="true"
               filltable="true" minyear="-3" maxyear="5" />

        <field name="taxable" type="pinputswitch" default="0" label="Apply Tax" description=""
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="discount" type="pinputswitch" default="0" label="Discount" description=""
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

    </fieldset>

</form>
