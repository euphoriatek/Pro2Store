<form>
    <fieldset name="details"  addfieldpath="/administrator/components/com_protostore/models/fields">

        <field name="name" type="vuetext" default="title" label="Name" description="" required="true" size="10"
               class="uk-input uk-form-width-medium uk-form-large"/>

        <field name="coupon_code" type="vuetext" default="title" label="Coupon Code" required="true" description="" size="10"
               class="uk-input uk-form-width-medium uk-form-large"/>

        <field name="amount" type="pinputnumber" default="0" label="Amount" description="" size="10" formName="discount_amount"
               class="uk-input uk-form-width-medium uk-form-large" />

        <field name="percentage" type="pinputnumber" label="Percentage" description="Percentage" formName="discount_percentage" />

        <field name="discount_type" type="discounttype" default="" required="true" label="Discount Type" description="" />

        <field name="expiry_date" type="calendar" default="now" label="Select a date" description=""
               class="input-medium uk-input non-uk-input" required="true" filter="user_utc" format="%Y-%m-%d %H:%M:%S"
               singleheader="true" showtime="true" timeformat="12" todaybutton="true" weeknumbers="true"
               filltable="true" minyear="-3" maxyear="5" />

        <field name="published" type="pinputswitch" default="0" label="Published" description=""
               class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

    </fieldset>

</form>
